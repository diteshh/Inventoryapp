{
  "expo": {
    "name": "Imperial Inventory",
    "slug": "imperial-inventory",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "imperial-inventory",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#1B2838"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.orchids.imperialinventory",
      "infoPlist": {
        "NSCameraUsageDescription": "Camera is used to take photos of items and scan barcodes.",
        "NSPhotoLibraryUsageDescription": "Photo library is used to select item photos.",
        "NSFaceIDUsageDescription": "Face ID is used for app lock security.",
        "ITSAppUsesNonExemptEncryption": false
      }
    },
    "android": {
      "edgeToEdgeEnabled": true,
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#1B2838"
      },
      "package": "com.orchids.imperialinventory",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.USE_BIOMETRIC",
        "android.permission.USE_FINGERPRINT",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow Imperial Inventory to access your camera."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow Imperial Inventory to access your photos."
        }
      ],
      [
        "expo-local-authentication",
        {
          "faceIDPermission": "Allow Imperial Inventory to use Face ID for app lock."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "2a525f2b-1852-439d-a85e-9ae5dcc0bf7e"
      }
    },
    "owner": "ditesh"
  }
}
